<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- actionBar styles -->
    <style name="HoloLight.ActionBarStyle" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ActionBarBackground</item>
        <item name="android:background">@drawable/ActionBarBackground</item>
        <item name="titleTextStyle">@style/HoloLight.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/HoloLight.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/HoloLight.ActionBar.SubTitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/HoloLight.ActionBar.SubTitleTextStyle</item>
    </style>

    <!-- app menu styles -->
    <style name="AppMenuHeader" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/AppMenuHeader</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="AppMenuItem" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/AppMenuHeader</item>
        <item name="android:background">@drawable/btn_holo_transparent_flat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Holo light edit text -->
    <style name="HoloLight.EditTextHoloLight" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- action bar text styles -->
    <style name="HoloLight.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="HoloLight.ActionBar.SubTitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- alert dialog styles -->
    <style name="AlertDialogTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/HoloLightBlue</item>
    </style>

    <style name="AlertDialogMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/AppBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dip</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- default holo button -->
    <style name="HoloButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <!-- flat white holo button -->
    <style name="HoloWhiteFlatButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_holo_white_flat</item>
        <item name="android:textColor">@color/AppBlack</item>
    </style>

    <!-- flat transparent holo button -->
    <style name="HoloTransparentFlatButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_holo_transparent_flat</item>
        <item name="android:textColor">@color/AppBlack</item>
    </style>

    <!-- flat dark grey holo button -->
    <style name="HoloDarkGreyFlatButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_holo_grey_flat</item>
        <item name="android:textColor">@color/AppBlack</item>
    </style>
	
    <!-- dashboard related styles -->
    <style name="DashboardButton" parent="@android:style/Widget.TextView">
    	<item name="android:background">@drawable/btn_holo_transparent_flat</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_weight">0.5</item>
    	<item name="android:padding">10dp</item>
    	<item name="android:drawablePadding">5dp</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/TextColorRegular</item>
    	<item name="android:gravity">center</item>
    	<item name="android:clickable">true</item>
    </style>
    
    <!-- categories list related styles  -->
    <style name="CategoryEmptyExpencesText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <!-- report total sticky widget styles -->
    <style name="ReportTotalStickyTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ReportTotalStickyHeight</item>
        <item name="android:layout_marginBottom">@dimen/ReportTotalMsrginBottom</item>
    </style>

    <!-- report cards related styles -->
    <style name="ReportCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/card_report_bordered_bg</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ReportCardDate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/HoloLightBlue</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ReportCardTotal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/TextColorRegular</item>
        <item name="android:textSize">28sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="ReportEmpty" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/DarkGrey</item>
    </style>
</resources>
